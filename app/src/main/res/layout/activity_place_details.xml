<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.adrianlesniak.beautifulthailand.views.BTToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="15dp"
        app:primary_icon="@drawable/ic_close"
        app:secondary_icon="@drawable/ic_bookmark_off" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/place_photo_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/place_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place_name_view"
                android:layout_below="@+id/place_name_view"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_address" />

            <ImageView
                android:id="@+id/place_open_now_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place_address_icon"
                android:layout_below="@+id/place_website_text"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_open" />

            <ImageView
                android:id="@+id/place_rating_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place_phone_no_icon"
                android:layout_below="@+id/place_phone_no_text"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/place_website_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place_rating_icon"
                android:layout_below="@+id/place_rating_text"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_mouse" />

            <ImageView
                android:id="@+id/place_phone_no_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place_address_icon"
                android:layout_below="@+id/place_address_text"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_phone" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_photo_view"
                android:layout_margin="@dimen/standard_margin"
                android:layout_toRightOf="@+id/place_title_icon"
                android:textSize="30sp"
                app:font_type="bold"
                tools:text="Place title" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/place_address_icon"
                android:layout_toRightOf="@+id/place_address_icon"
                app:font_type="regular"
                tools:text="TextView" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_phone_no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/place_phone_no_icon"
                android:layout_toRightOf="@+id/place_phone_no_icon"
                app:font_type="regular"
                tools:text="TextView" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_website_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/place_website_icon"
                android:layout_toRightOf="@+id/place_website_icon"
                app:font_type="regular"
                tools:text="TextView" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/place_rating_icon"
                android:layout_toRightOf="@+id/place_rating_icon"
                app:font_type="regular"
                tools:text="TextView" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_open_now_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/place_open_now_icon"
                android:layout_toRightOf="@+id/place_open_now_icon"
                app:font_type="regular"
                tools:text="TextView" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="24sp"
                tools:text="New Bridge" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_gravity="left"
                android:textSize="14sp"
                tools:text="1.2 mi"
                android:textColor="@color/colorTextFaded"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_alignParentTop="true" />

                <com.adrianlesniak.beautifulthailand.views.BTTextView
                    android:id="@+id/rating_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    tools:text="3.4" />

                <com.adrianlesniak.beautifulthailand.views.BTTextView
                    android:id="@+id/place_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:textSize="14sp"
                    tools:text="1 review"
                    android:textColor="@color/colorTextFaded"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <com.adrianlesniak.beautifulthailand.views.BTPhotoCarousel
                android:id="@+id/photo_carousel"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:clipToPadding="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/rating_text_view" />


            <!-- Map View including overlay -->

            <include android:layout_width="match_parent"
                android:layout_height="@dimen/map_view_height"
                layout="@layout/include_map_layout"/>

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/back"
        style="@style/BTIconStyle.BTIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:rotation="-90"
        android:src="@drawable/ic_back"
        android:onClick="onBack"/>

</RelativeLayout>

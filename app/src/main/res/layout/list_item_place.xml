<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_photo_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_card_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                app:font_type="bold"
                tools:text="Stretford Grammar School" />

            <ImageButton
                android:id="@+id/place_add_to_fav"
                style="@style/BTIconStyle.BTIconButtonRedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name_view"
                app:srcCompat="@drawable/state_list_favourite_icon" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/place_card_height"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginRight="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/place_photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_gradient_place_title"
            android:padding="@dimen/activity_vertical_margin">

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/place_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:font_type="bold"
                tools:text="Stretford Grammar School" />

            <ImageButton
                android:id="@+id/place_add_to_fav"
                style="@style/BTIconStyle.BTIconButtonRedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name_view"
                app:srcCompat="@drawable/state_list_favourite_icon" />

            <com.adrianlesniak.beautifulthailand.views.BTTextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/place_add_to_fav"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                app:font_type="bold" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

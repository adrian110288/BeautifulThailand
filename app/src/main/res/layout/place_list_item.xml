<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_photo_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_list_item_photo_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin">

            <ImageView
                android:id="@+id/place_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin"
                app:srcCompat="@drawable/ic_globe" />

            <com.adrianlesniak.beautifulthailand.BTTextView
                android:id="@+id/place_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_toRightOf="@+id/place_title_icon"
                app:font_type="bold"
                tools:text="Stretford Grammar School" />

            <ImageButton
                android:id="@+id/place_add_to_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name_view"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/favourite_icon_state_list" />

            <ImageButton
                android:id="@+id/place_add_to_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/place_name_view"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_bookmark" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>